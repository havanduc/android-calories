<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền thẻ -->
    <solid android:color="#FFFFFF" />

    <!-- Bo góc cho thẻ -->
    <corners android:radius="8dp" />

    <!-- Viền thẻ -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Đổ bóng cho thẻ -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
