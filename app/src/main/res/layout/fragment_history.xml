<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"

        android:textSize="34dp"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:hint="Nhập ngày (YYYY-MM-DD)"
        android:inputType="text"
        android:padding="5dp"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: "

        android:textSize="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/totalCaloriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng lượng calo trong ngày: 0"

        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/totalCarbsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng chất carbs trong ngày: 0"

        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/totalFatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng chất béo trong ngày: 0"

        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/totalProteinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng chất đạm trong ngày: 0"

        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/totalCaloriesConsumedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng lượng calo tiêu thụ: 0"

        android:textSize="20dp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
