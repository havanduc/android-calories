<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/fragment_home"
    >

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="387dp"
        android:layout_height="72dp"
        android:text="Ngày hôm nay: "

        android:textSize="26sp" />

    <TextView
        android:id="@+id/totalCaloriesTextView"
        android:layout_width="380dp"
        android:layout_height="92dp"
        android:text="Tổng lượng calo trong ngày: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalCarbsTextView"
        android:layout_width="380dp"
        android:layout_height="87dp"
        android:text="Tổng lượng carbs trong ngày: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalFatTextView"
        android:layout_width="394dp"
        android:layout_height="86dp"
        android:text="Tổng lượng chất béo trong ngày: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalProteinTextView"
        android:layout_width="389dp"
        android:layout_height="86dp"
        android:text="Tổng chất lượng chất đạm trong ngày: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalCaloriesConsumedTextView"
        android:layout_width="389dp"
        android:layout_height="91dp"
        android:text="Tổng lượng calo tiêu thụ : "
        android:textSize="20sp" />


</LinearLayout>
